<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#C845BB"
        android:gravity="center"
        android:text="4"
        android:textColor="#FFEBEE"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#D89E48"
        android:gravity="center"
        android:text="3"
        android:textColor="#FFEBEE"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_4"
        app:layout_constraintEnd_toStartOf="@+id/tv_4" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#2E6030"
        android:gravity="center"
        android:text="2"
        android:textColor="#FFEBEE"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_3"
        app:layout_constraintEnd_toStartOf="@+id/tv_3" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#f20"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFEBEE"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_2"
        app:layout_constraintEnd_toStartOf="@+id/tv_2" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#FFCCBC"
        android:gravity="center"
        android:text="5"
        android:textColor="#FFEBEE"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_4" />

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#673AB7"
        android:gravity="center"
        android:text="6"
        android:textColor="#FFEBEE"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_5" />

    <TextView
        android:id="@+id/tv_7"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#CDDC39"
        android:gravity="center"
        android:text="7"
        android:textColor="#FFEBEE"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_6"
        app:layout_constraintTop_toBottomOf="@+id/tv_6" />


</androidx.constraintlayout.widget.ConstraintLayout>